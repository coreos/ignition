#!/bin/bash -eu

source ./build

SRC="
	src
	src/config
	src/config/types
	src/config/v1
	src/config/v1/types
	src/exec
	src/exec/stages
	src/exec/stages/disks
	src/exec/stages/files
	src/exec/util
	src/providers
	src/providers/cmdline
	src/providers/ec2
	src/providers/util
	src/registry
	src/util
	src/util/tools
"

echo "Checking gofix..."
go tool fix -diff $SRC

echo "Checking gofmt..."
res=$(gofmt -d -e -s $SRC)
echo "${res}"
if [ -n "${res}" ]; then
	exit 1
fi

# split SRC into an array and prepend REPO_PATH to each local package for go vet
split_vet=(${SRC// / })
VET_TEST=${split_vet[@]/#/${REPO_PATH}/}

echo "Checking govet..."
go vet $VET_TEST

echo "Running tests..."
go test -timeout 60s -cover $@ ${VET_TEST} --race

echo "Success"
